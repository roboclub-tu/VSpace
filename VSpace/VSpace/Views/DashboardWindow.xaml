<Window x:Class="VSpace.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSpace.Views"
        mc:Ignorable="d"
        Title="VSpace Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF007ACC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="VSpace Dashboard" 
                       Foreground="White" 
                       FontSize="24" 
                       Margin="20,15"/>
            
            <Button Grid.Column="1" 
                    Content="Logout" 
                    Width="100" 
                    Height="35" 
                    Margin="0,15,20,15"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="LogoutButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- BOINC Status -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="BOINC Client Status" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Status:" 
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="BoincStatusText"
                               Grid.Column="1"
                               Text="Checking..."
                               FontSize="16"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>

            <!-- BOINC Controls -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Margin="0,0,0,20">
                <Button x:Name="ConnectButton"
                        Content="Connect to BOINC"
                        Width="150"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="ConnectButton_Click"/>
                
                <Button x:Name="DisconnectButton"
                        Content="Disconnect"
                        Width="150"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="DisconnectButton_Click"
                        IsEnabled="False"/>
                
                <Button x:Name="RefreshButton"
                        Content="Refresh Status"
                        Width="150"
                        Height="35"
                        Click="RefreshButton_Click"/>
            </StackPanel>

            <!-- BOINC Projects -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Active Projects" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <ListView x:Name="ProjectsListView"
                          Grid.Row="1"
                          BorderThickness="1"
                          BorderBrush="#FFCCCCCC">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Project Name" Width="200"/>
                            <GridViewColumn Header="Status" Width="100"/>
                            <GridViewColumn Header="Tasks" Width="100"/>
                            <GridViewColumn Header="Progress" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Window> 